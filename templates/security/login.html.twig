{% extends "layout.html.twig" %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="min-vh-100">
		<main class='d-flex justify-content-center m-5 bg-dark'>
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}


				<h1 class="h3 font-weight-normal text-light text-center my-4">Connectez vous</h1>
				<label for="inputEmail" class="text-light my-2">Email :</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword" class="text-light my-2">Mot de passe :</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-flex justify-content-center">
					<button class="btn btn-lg btn-primary my-3 text-center" type="submit">
						Sign in
					</button>
				</div>
			</form>
		</main>
	</div>
{% endblock %}
