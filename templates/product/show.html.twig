{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1 class="text-center my-5">Product</h1>
<div class="container">
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ product.picture }}</td>
			</tr>
		</tbody>
	</table>
    </div>
	<div class="container d-flex justify-content-center">
		<button class="btn btn-primary m-2">
			<a class="text-light" href="{{ path('product_index') }}">back to list</a>
		</button>
	</div>
	<div class="container d-flex justify-content-center">
		<button class="btn btn-primary m-2">
			<a class="text-light" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
		</button>
	</div>
	{{ include('product/_delete_form.html.twig') }}
{% endblock %}
